{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "outDir": "bin",
    "strict": true,
    "target": "ES2020",
    "module": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  }
}
